<% if(totalItems > itemsPerPage) { %>
  <section id="pagination" class="mx-auto  mb-4 bg-light px-5 rounded py-1" style="width: fit-content ">
    <div class="mx-auto text-center text-secondary">Page No. <%= currentPage%></div>
    <% if(currentPage != 1) { %> 
      <a class="btn btn-primary first" href="?page=1">1</a>
    <% } %>
    <% if(hasPreviousPage && previousPage != 1) { %> 
      <span>...</span>
      <a class="btn btn-primary previous" href="?page=<%= previousPage %>"><%= previousPage %></a>
    <% } %>
    <a class="btn btn-success" href="?page=<%= currentPage %>"><%= currentPage %></a>
    <% if(hasNextPage && lastPage != nextPage) { %>
      <a class="btn btn-primary next" href="?page=<%= nextPage %>"><%= nextPage %></a>
      <span>...</span>
      <% } %>
      <% if(lastPage != currentPage) { %>
      <a class="btn btn-primary last" href="?page=<%= lastPage %>"><%= lastPage %></a>
    <% } %>
  </section>
<% } %>