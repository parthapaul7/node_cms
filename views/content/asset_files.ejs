<%- include('../includes/header.ejs') %>
<%- include('../includes/nav.ejs') %>
    <div class="main">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="mx-auto w-50 p-3 bg-light ">
						<h1><%= pageTitle %></h1>
						<div class="add-post">
							<div class="add-post-form">
								<form action="/asset_files" class="needs-validation" method="POST" enctype="multipart/form-data" >
									<div class="form-group">
										<label for="file" class="form-check-label">File</label>
										<input type="file" name="file" class="form-control"  required="required" value="<%= oldInput.file%>">
										<div class="invalid-feedback" >
											<%= errFields.errFile%>
										</div>
									</div>
									<div class="form-group">
										<label for="name" class="form-check-label">Name</label>
										<input type="text" name="name" class="form-control"  required="required" value="<%= oldInput.name%>">
										<div class="invalid-feedback" >
											<%= errFields.errName%>
										</div>
									</div>
									<div class="form-group">
										<label for="institution" class="form-check-label">institution</label>
										<input type="text" name="institution" class="form-control"  value="<%= oldInput.name%>">
										<div class="invalid-feedback" >
											<%= errFields.errInsti%>
										</div>
									</div>
									<div class="form-group">
										<label for="type" class="form-check-label">type</label>
										<input type="text" name="type" class="form-control" placeholder="advisory" required="required" value="<%= oldInput.type%>"><%= oldInput.type%></input>
										<div class="invalid-feedback">
											<%= errFields.type%>
										</div>
									</div>
									<div class="form-group">
										<label for="type" class="form-check-label">Extra </label>
										<pre class="extraFields"><textarea type="text" rows="4" name="extraFields" class="form-control" placeholder="optional , write sticktly in json"  value="<%= oldInput.extraFields %>"><%= oldInput.extraFields %></textarea></pre>
										<div class="invalid-feedback">
											<%= errFields.type%>
										</div>
									</div>
									<input class="btn btn-primary" type="submit" value="Add file">
								</form>
							</div>
						</div>
					</div>
				</div>
		</div>
		</div>
	</div>
<%- include('../includes/footer.ejs') %>