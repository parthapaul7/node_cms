<%- include('../includes/header.ejs') %>
	<%- include('../includes/nav.ejs') %>
		<div class="main">
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="mx-auto w-50 p-3 bg-light ">
							<h1>
								<%= pageTitle %>
							</h1>
							<form action="/edit/asset_files/<%= post._id %>" method="POST" enctype="multipart/form-data" >
								<div class="form-group">
									<label for="file" class="form-check-label">File</label>
									<input type="file" name="file" class="form-control" 
										value="<%= oldInput.file%>">
									<div class="invalid-feedback">
										<%= errFields.errFile%>
									</div>
								</div>
								<div class="form-group">
									<label for="name" class="form-check-label">Name</label>
									<input type="text" name="name" id="name" class="form-control" required="required"
										value="<%= oldInput.name%>">
									<div class="invalid-feedback">
										<%= errFields.errName%>
									</div>
								</div>
								<div class="form-group">
									<label for="institution" class="form-check-label">institution</label>
									<input type="text" name="institution" id="institution" class="form-control" required="required"
										value="<%= oldInput.institution%>">
									<div class="invalid-feedback">
										<%= errFields.errInsti%>
									</div>
								</div>
								<div class="form-group">
									<label for="type" class="form-check-label">type</label>
									<input type="text" name="type" class="form-control" required="required"
										value="<%= oldInput.type%>">
								</div>
								<div class="form-group">
									<label for="type" class="form-check-label">Extra Fields</label>
									<pre class="extraFields"><textarea type="text" name="extraFields" rows="5" class="form-control" required="required"
										value="<%= oldInput.extraFields%>"><%= oldInput.extraFields%></textarea></pre>
								</div>
								<input type="hidden" name="id" value="<%= post._id %>">
								<input class="btn btn-primary" type="submit" value="Edit file">
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%- include('../includes/footer.ejs') %>