<%- include('../includes/header.ejs') %>
<div class="main">
	<div class="container my-5">
		<div class="row">
			<div class="col">
				<div class="mx-auto w-50 p-3 bg-light ">
					<h1><%= pageTitle %></h1>
					<div class="registration-form">
						<form action="/register" method="POST">
							<div class="form-group">
								<label for="email" class="form-check-label">Email</label>
								<input 
									type="email" 
									name="email" 
									class="form-control <% if (errFields.errEmail) { %>is-invalid<% } %>"  
									required="required" 
									value="<%= oldInput.email %>">
								<div class="invalid-feedback" ><%= errFields.errEmail %></div>
							</div>
							<div class="form-group">
								<label for="username" class="form-check-label">Username</label>
								<input 
									type="text" 
									name="username" 
									class="form-control <% if (errFields.errUsername) { %>is-invalid<% } %>" 
									required="required" 
									value="<%= oldInput.username %>">
								<div class="invalid-feedback" ><%= errFields.errUsername %></div>
							</div>
							<div class="form-group">
								<label for="password" class="form-check-label">Password</label>
								<input 
									type="password" 
									name="password" 
									class="form-control <% if (errFields.errPassword) { %>is-invalid<% } %>"  
									required="required">
								<div class="invalid-feedback" ><%= errFields.errPassword %></div>
							</div>
							<div class="form-group">
								<label for="password" class="form-check-label">Confirm Password</label>
								<input 
									type="password" 
									name="passwordConf" 
									class="form-control <% if (errFields.errPasswordConf) { %>is-invalid<% } %>"  
									required="required" >
								<div class="invalid-feedback" ><%= errFields.errPasswordConf %></div>
							</div>
							<input type="submit" class="btn btn-primary" value="Register">
						</form>
					</div>
					<p><a href="#"> By clicking register, I agree with our terms</a></p>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include('../includes/footer.ejs') %>
